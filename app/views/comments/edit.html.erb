<div class="content">

<% if comment_author(@comment) || has_role?(:admin) || has_role?(:moderator) %>

  <h1>Edit Comment</h1>
  <%= link_to "Back", @comment.discussion %>
  <hr>

  <%= simple_form_for @comment do |f| %>
    <div>
      <%= f.input :content, input_html: { class: 'textarea' }, label_html: { class: 'label' } %>
    </div>

    <%= f.button :submit, 'Update Comment', class:'btn btn-primary' %> 
  <% end %>

<% else %>
  <p>You are not authorized to view this page</p>
<% end %>

</div>